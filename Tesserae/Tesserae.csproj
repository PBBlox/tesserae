<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net461</TargetFramework>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Copyright>(c) Copyright 2020 Curiosity GmbH - all right reserved</Copyright>
    <Company>Curiosity GmbH</Company>
    <Authors>Curiosity GmbH</Authors>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <LangVersion>7.1</LangVersion>
    <PackageProjectUrl>https://github.com/curiosity-ai/tesserae</PackageProjectUrl>
    <DefineConstants>BRIDGE</DefineConstants>
    <PackageId>Tesserae</PackageId>
    <Description>Tesserae is a UI toolkit for building web applications using Bridge.NET</Description>
    <PackageTags>Bridge.NET, HTML, UI</PackageTags>
    <PackageIcon>tesserae-logo.png</PackageIcon>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Bridge" Version="17.9.0" />
    <PackageReference Include="Bridge.Core" Version="17.9.0" />
    <PackageReference Include="Retyped" Version="1.6.6733" />
  </ItemGroup>
  <ItemGroup>
    <None Update="bridge.Debug.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="bridge.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="bridge.Release.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="bridge\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="bridge\assets\img\**" />
    <EmbeddedResource Remove="bridge\assets\img\**" />
    <None Remove="bridge\assets\img\**" />
  </ItemGroup>
</Project>